<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/dialog_rate_guide_txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <RatingBar
        android:id="@+id/dialog_rate_guide_rate_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_rate_guide_txt_title"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/dialog_rate_guide_edit_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_rate_guide_rate_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:minLines="5" >

        <requestFocus />
    </EditText>

    <LinearLayout
        android:id="@+id/dialog_rate_guide_layout_button_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_rate_guide_edit_comment"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" >

        <Button
            android:id="@+id/dialog_rate_guide_btn_ok"
            style="@style/base_button_text"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="@drawable/base_button"
            android:text="@string/ok" />

        <Button
            android:id="@+id/dialog_rate_guide_btn_cancel"
            style="@style/base_button_text"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="@drawable/base_button"
            android:text="@string/cancel" />

    </LinearLayout>

</RelativeLayout>

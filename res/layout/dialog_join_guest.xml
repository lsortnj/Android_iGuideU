<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/dialog_join_guest_txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/join_guide_how_many_guest"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:id="@+id/dialog_join_guest_layout_guest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_join_guest_txt_title"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp" >

        <ImageButton
            android:id="@+id/dialog_join_guest_minus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitCenter"
            android:src="@drawable/minus" />

        <TextView
            android:id="@+id/dialog_join_guest_txt_guest_count"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center"
            android:text="1"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageButton
            android:id="@+id/dialog_join_guest_plus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerInside"
            android:src="@drawable/plus" />
    </LinearLayout>

    <Button
        android:id="@+id/dialog_join_guest_btn_done"
        style="@style/base_button_text"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/dialog_join_guest_layout_guest"
        android:layout_centerHorizontal="true"
        android:background="@drawable/base_button"
        android:text="@string/ok" />

</RelativeLayout>
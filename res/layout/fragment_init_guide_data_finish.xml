<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/fragment_init_guide_img_finish"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:src="@drawable/init_guide_finish" />

    <TextView
        android:id="@+id/fragment_init_guie_finish_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_init_guide_img_finish"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="@string/finish_guide_data"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/init_guide_data_btn_finish"
        style="@style/base_button_text"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_init_guie_finish_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/base_button"
        android:text="@string/finish" />

</RelativeLayout>

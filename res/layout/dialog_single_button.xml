<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/dialog_single_btn_layout_info"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_single_btn_txt_title"
        android:layout_centerHorizontal="true" >

        <ImageView
            android:id="@+id/dialog_single_btn_img_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/dialog_single_btn_txt_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/dialog_single_btn_img_icon"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </RelativeLayout>

    <TextView
        android:id="@+id/dialog_single_btn_txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/dialog_single_btn_btn_done"
        style="@style/base_button_text"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_single_btn_layout_info"
        android:layout_centerHorizontal="true"
        android:layout_weight=".5"
        android:background="@drawable/base_button"
        android:text="@string/ok" />

</RelativeLayout>